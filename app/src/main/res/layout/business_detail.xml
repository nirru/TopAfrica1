<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/content_category"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.africa.annauiare.activity.DetailActivity"
    tools:showIn="@layout/activity_detail">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <!-- Login progress -->
        <ProgressBar
            android:id="@+id/login_progress"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@id/login_form"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">

            <ImageView
                android:id="@id/id_image_bus_logo_camera"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/heart"/>

            <TextView
                android:id="@id/id_card_business_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/id_image_bus_logo_camera"
                android:layout_marginLeft="10dp"
                android:textSize="12sp"
                android:textStyle="bold"
                android:text="dfdfdfdfdfdf"/>

            <TextView
                android:id="@id/id_card_business_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category"
                android:layout_below="@id/id_card_business_name"
                android:textSize="12sp"
                android:layout_alignLeft="@id/id_card_business_name"/>


            <TextView
                android:id="@id/id_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Adress"
                android:layout_below="@id/id_card_business_category"
                android:inputType="textMultiLine"
                android:minLines="1"
                android:maxLines="2"
                android:textSize="12sp"
                android:layout_alignLeft="@id/id_card_business_name"/>

            <android.support.v7.widget.AppCompatRatingBar
                android:id="@id/id_card_business_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:rating="0"
                android:numStars="5"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/id_address"
                android:layout_alignLeft="@id/id_card_business_name"/>

            <TextView
                android:id="@id/id_card_business_review"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="review"
                android:textColor="@color/colorAccent"
                android:layout_below="@id/id_address"
                android:layout_toRightOf="@id/id_card_business_rating"/>

            <RelativeLayout
                android:id="@id/id_detail_rel_2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/id_detail_rel_1"
                android:background="@drawable/card_transparent">

                <ImageView
                    android:id="@id/id_card_business_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="10dp"
                    android:src="@drawable/mail"/>

                <TextView
                    android:id="@id/id_card_business_text_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/id_card_business_email"
                    android:text="dsffdf"
                    android:paddingLeft="15dp"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@id/id_detail_rel_3"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/id_detail_rel_2"
                android:background="@drawable/card_transparent">

                <ImageView
                    android:id="@id/id_card_business_website"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="10dp"
                    android:src="@drawable/ic_website"/>

                <TextView
                    android:id="@id/id_card_business_text_website"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/id_card_business_website"
                    android:text="Website"
                    android:autoLink="web"
                    android:paddingLeft="15dp"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@id/id_detail_rel_4"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/id_detail_rel_3"
                android:background="@drawable/card_transparent">

                <ImageView
                    android:id="@id/id_card_business_facebook"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="10dp"
                    android:src="@drawable/facebook"/>

                <TextView
                    android:id="@id/id_card_business_text_facebook"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/id_card_business_facebook"
                    android:text="Facebook"
                    android:paddingLeft="15dp"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@id/id_detail_rel_5"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/id_detail_rel_4"
                android:background="@drawable/card_transparent">

                <ImageView
                    android:id="@id/id_card_business_telephone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="10dp"
                    android:src="@drawable/ic_twitter"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/id_card_business_telephone"
                    android:text="Twitter"
                    android:paddingLeft="15dp"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@id/id_detail_rel_6"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/id_detail_rel_5"
                android:background="@drawable/card_transparent">

                <ImageView
                    android:id="@id/id_card_business_telephone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="10dp"
                    android:src="@drawable/ic_g_plus"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/id_card_business_telephone"
                    android:text="Google"
                    android:paddingLeft="15dp"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>

            <LinearLayout
                android:id="@id/id_detail_rel_7"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:weightSum="2"
                android:layout_below="@id/id_detail_rel_6"
                android:background="@drawable/card_transparent">

                <android.support.v7.widget.RecyclerView
                    android:id="@id/id_recyleview_category"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginRight="5dp"
                    android:clipToPadding="false">
                </android.support.v7.widget.RecyclerView>


                <fragment
                    android:id="@id/streetviewpanorama"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    class="com.google.android.gms.maps.SupportStreetViewPanoramaFragment"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@id/id_detail_rel_8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_below="@id/id_detail_rel_7"
                android:background="@drawable/card_transparent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Description"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@id/id_card_business_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:text="My Description"
                    android:scrollbars="vertical"
                    android:gravity="top|left"
                    android:padding="10dp"/>

            </LinearLayout>


            <LinearLayout
                android:visibility="gone"
                android:id="@id/id_detail_rel_9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_below="@id/id_detail_rel_8"
                android:background="@drawable/card_transparent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address"
                    android:textSize="12sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:text="My Address"
                    android:gravity="top|left"
                    android:padding="10dp"/>
            </LinearLayout>

            <RelativeLayout
                android:id="@id/id_detail_rel_1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/card_background"
                android:layout_below="@+id/id_card_business_review"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_alignParentStart="true">

                <ImageView
                    android:id="@id/id_card_business_telephone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="10dp"
                    android:src="@drawable/ic_ring"/>

                <TextView
                    android:id="@id/id_card_business_text_telephone"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_toRightOf="@id/id_card_business_telephone"
                    android:text="1212121212"
                    android:paddingLeft="15dp"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorAccent"
                    android:layout_centerInParent="true"/>

                   <TextView
                       android:id="@id/id_card_business_text_route"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_alignParentEnd="true"
                       android:text="Route"
                       android:layout_centerVertical="true"
                       android:paddingRight="10dp"/>

                   <ImageView
                       android:id="@id/id_card_business_route"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:src="@drawable/route"
                       android:layout_toLeftOf="@id/id_card_business_text_route"
                       android:layout_centerVertical="true"
                       android:paddingRight="10dp"/>



            </RelativeLayout>


        </RelativeLayout>

    </RelativeLayout>


</android.support.v4.widget.NestedScrollView>