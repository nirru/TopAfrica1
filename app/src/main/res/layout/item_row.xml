<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="205dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@id/id_card_business_name"
            android:text="@string/business_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="14sp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@id/id_card_business_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/id_card_business_name"
            android:layout_below="@id/id_card_business_name"
            android:lines="2"
            android:minLines="1"
            android:maxLines="2"
            android:layout_alignTop="@id/id_card_business_review"
            android:layout_toLeftOf="@id/id_card_business_review"
            android:text="@string/business_address"
            android:textSize="12sp"/>

        <ImageView
            android:id="@id/id_card_business_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:layout_below="@id/id_card_business_text_open"
            android:layout_alignLeft="@id/id_card_business_name"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_logo"/>

        <TextView
            android:id="@id/id_card_business_title_key"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/id_card_business_image"
            android:layout_alignTop="@id/id_card_business_image"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:lines="1"
            android:minLines="1"
            android:maxLines="1"
            android:textSize="13sp"
            android:textStyle="bold"
            android:text="@string/business_category"/>

        <TextView
            android:id="@id/id_card_business_title_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/id_card_business_title_key"
            android:layout_alignTop="@id/id_card_business_image"
            android:paddingLeft="15dp"
            android:paddingTop="5dp"
            android:paddingRight="10dp"
            android:lines="1"
            android:minLines="1"
            android:maxLines="1"
            android:textSize="13sp"
            android:text="sxcssdzxzxcvcvcvvcvcvccvxzsdsd"/>

        <TextView
            android:id="@id/id_card_business_menu_key"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/id_card_business_image"
            android:layout_below="@id/id_card_business_title_key"
            android:paddingLeft="10dp"
            android:text="@string/business_menu"
            android:lines="1"
            android:minLines="1"
            android:maxLines="1"
            android:textSize="13sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@id/id_card_business_menu_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/id_card_business_menu_key"
            android:layout_below="@id/id_card_business_title_value"
            android:layout_alignLeft="@id/id_card_business_title_value"
            android:paddingLeft="15dp"
            android:paddingRight="10dp"
            android:lines="2"
            android:minLines="1"
            android:maxLines="2"
            android:textSize="13sp"
            android:text="Coming Soon"/>

        <TextView
            android:id="@id/id_seperator"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_500"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:alpha=".5"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_below="@id/id_card_business_image"/>


        <ImageView
            android:id="@id/id_card_business_offer_image"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@id/id_seperator"
            android:src="@drawable/vector_drawable_ic_navigation_black___px"
            android:layout_marginTop="10dp"
            android:layout_alignLeft="@id/id_card_business_name"/>

        <TextView
            android:id="@id/id_card_business_offer_key"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/business_offer_key"
            android:textColor="@color/pink_500"
            android:layout_below="@id/id_seperator"
            android:layout_toRightOf="@id/id_card_business_offer_image"
            android:paddingLeft="5dp"
            android:layout_marginTop="13dp"
            android:textStyle="bold"
            android:textSize="11sp"/>

        <TextView
            android:id="@id/id_card_business_offer_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/id_seperator"
            android:layout_toRightOf="@id/id_card_business_offer_key"
            android:paddingLeft="5dp"
            android:layout_marginTop="13dp"
            android:text="@string/business_offer_value"
            android:textSize="11sp"
            android:lines="1"
            android:maxLines="1"/>

        <android.support.v7.widget.AppCompatRatingBar
            android:id="@id/id_card_business_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rating="3"
            android:stepSize="0.02"
            android:numStars="5"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            style="@style/AppTheme.RatingBar"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@id/id_card_business_review"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/review"
            android:gravity="right"
            android:layout_alignRight="@id/id_card_business_rating"
            android:layout_below="@id/id_card_business_rating"
            android:textSize="12sp"
            android:layout_marginTop="3dp"/>

        <TextView
            android:id="@id/id_card_business_text_open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/business_text_open"
            android:layout_alignRight="@id/id_card_business_rating"
            android:layout_below="@id/id_card_business_review"
            android:textSize="12sp"
            android:layout_marginTop="3dp"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>