<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.africa.annauiare.activity.LoginActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/view_common_toolbar" />

    <LinearLayout
        android:id="@+id/linear_xt"
        android:layout_width="match_parent"
        android:layout_height="@dimen/register_container_size"
        android:layout_below="@+id/linear_root_2"
        android:layout_marginTop="@dimen/margin_top"
        android:orientation="vertical"
        android:background="#ffe0b2"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/forgot_text_size"
            android:text="Not Regiter Yet?"/>

        <TextView
            android:id="@+id/register_here"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register Here."
            android:textSize="@dimen/forgot_text_size"
            android:textColor="#176af3"/>

    </LinearLayout>

    <android.support.v7.widget.AppCompatButton
        android:id="@id/simple_sign_in"
        android:layout_width="@dimen/reg_button_width"
        android:layout_height="@dimen/button_height"
        android:layout_below="@+id/linear_xt"
        android:gravity="center"
        android:background="@drawable/reg_button_rect_shape"
        android:layout_centerHorizontal="true"
        android:text="Submit"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:layout_marginTop="@dimen/margin_top"/>



    <LinearLayout
        android:id="@+id/linear_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_below="@+id/toolbar"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3.0">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/sign_in_facebook"
                    android:layout_width="@dimen/social_icon_width"
                    android:layout_height="@dimen/social_icon_width"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_facebook_128"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/facebook"
                    android:textSize="@dimen/social_icon_text_size"
                    android:textColor="@android:color/black"
                    android:layout_marginTop="5dp"
                    android:textStyle="bold"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/sign_in_twitter"
                    android:layout_width="@dimen/social_icon_width"
                    android:layout_height="@dimen/social_icon_width"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_twitter_128"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/twitter"
                    android:textSize="@dimen/social_icon_text_size"
                    android:textColor="@android:color/black"
                    android:layout_marginTop="5dp"
                    android:textStyle="bold"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/sign_in_google"
                    android:layout_width="@dimen/social_icon_width"
                    android:layout_height="@dimen/social_icon_width"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_google_plus_128"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/google"
                    android:textSize="@dimen/social_icon_text_size"
                    android:textColor="@android:color/black"
                    android:layout_marginTop="5dp"
                    android:textStyle="bold"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/sign_in_linkedin"
                    android:layout_width="@dimen/social_icon_width"
                    android:layout_height="@dimen/social_icon_width"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_linkedin_128"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/linkedIn"
                    android:textSize="@dimen/social_icon_text_size"
                    android:textColor="@android:color/black"
                    android:layout_marginTop="5dp"
                    android:textStyle="bold"/>


            </LinearLayout>

        </LinearLayout>
        </LinearLayout>


        <TextView
            android:id="@+id/or_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Or"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="@dimen/or_padding"
            android:background="#ffe0b2"
            android:textColor="@android:color/black"
            android:textAppearance="?android:textAppearanceMedium"
            android:layout_marginTop="@dimen/or_margin"
            android:layout_below="@+id/linear_root"/>

    <LinearLayout
        android:id="@+id/linear_root_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_below="@+id/or_text"
        android:layout_alignParentStart="true">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <EditText
                android:id="@id/id_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_email"
                android:ems="40"
                android:lines="1"
                android:layout_marginTop="@dimen/margin_top"
                android:padding="@dimen/text_padding"
                android:textSize="@dimen/normal_text_size"
                android:inputType="text"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@id/id_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_password"
                android:ems="40"
                android:padding="@dimen/text_padding"
                android:layout_marginTop="@dimen/margin_top"
                android:lines="1"
                android:textSize="@dimen/normal_text_size"
                android:inputType="textPassword"/>
        </android.support.design.widget.TextInputLayout>



        <TextView
            android:id="@+id/forgot_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot Password?"
            android:textColor="#176af3"
            android:layout_marginTop="@dimen/margin_top"
            android:textSize="@dimen/forgot_text_size"
            android:layout_gravity="center|right"
            android:padding="@dimen/text_padding"/>



       <TextView
           android:layout_width="match_parent"
           android:layout_height="30dp"
           android:layout_marginTop="@dimen/activity_vertical_margin"
           android:visibility="gone"/>


        <android.support.v7.widget.AppCompatButton
            android:id="@id/simple_sign_up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Signup"
            android:visibility="gone"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/login_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:background="#3b5998"
            android:text="Log in With Facebook"
            android:padding="10dp"
            android:visibility="gone"
            android:textSize="12sp"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:drawableLeft="@drawable/ic_logo_facebook"
            android:layout_gravity="center_horizontal"/>


        <com.google.android.gms.common.SignInButton
            android:id="@+id/sign_in_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:buttonSize="standard"
            android:visibility="gone"
            android:layout_marginTop="10dp"/>

        <com.twitter.sdk.android.core.identity.TwitterLoginButton
            android:id="@+id/login_twitter_button"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:visibility="gone"
            android:layout_marginTop="10dp" />

    </LinearLayout>


</RelativeLayout>
