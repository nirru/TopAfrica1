<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="96dp"
  app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@id/id_card_business_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            android:layout_centerVertical="true"
            android:src="@drawable/vector_drawable_rain"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@id/id_card_business_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:layout_toRightOf="@id/id_card_business_image"
            android:maxLines="1"
            android:paddingTop="5dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text=""
            android:textSize="12sp"/>

        <TextView
            android:id="@id/id_card_business_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/id_card_business_image"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_below="@id/id_card_business_name"
            android:text=""
            android:textSize="11sp"
            android:lines="1"
            android:maxLines="1"/>

        <TextView
            android:id="@id/id_card_business_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/id_card_business_image"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_below="@id/id_card_business_category"
            android:text=""
            android:textSize="11sp"
            android:lines="2"
            android:maxLines="2"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>