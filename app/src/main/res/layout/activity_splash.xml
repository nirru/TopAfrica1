<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_splash"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context="com.africa.annauiare.activity.SplashActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_splash_logo"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:gravity="center"
        android:padding="@dimen/activity_vertical_margin"
        android:textColor="@android:color/black"
        android:textAppearance="?android:textAppearanceMedium"
        android:layout_centerHorizontal="true"
        android:text="Tout prÃ¨s, n'est pas loin."/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/reg3_padding"
        android:layout_alignParentBottom="true">
        <android.support.v7.widget.AppCompatButton
            android:id="@id/simple_sign_in"
            android:layout_width="@dimen/reg_button_width"
            android:layout_height="@dimen/button_height"
            android:layout_below="@+id/linear_xt"
            android:background="@drawable/reg_button_rect_shape"
            android:text="Login"
            android:textAllCaps="false"
            android:textColor="@android:color/black"
            android:layout_marginTop="@dimen/margin_top"/>

        <android.support.v7.widget.AppCompatButton
            android:id="@id/simple_sign_up"
            android:layout_width="@dimen/reg_button_width"
            android:layout_height="@dimen/button_height"
            android:layout_below="@+id/linear_xt"
            android:gravity="center"
            android:background="@drawable/reg_button_rect_shape"
            android:layout_alignParentRight="true"
            android:text="Sign Up"
            android:textAllCaps="false"
            android:textColor="@android:color/black"
            android:layout_marginTop="@dimen/margin_top"/>

    </RelativeLayout>



</RelativeLayout>
